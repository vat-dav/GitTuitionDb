@model TuitionDbv1.Models.Batch

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this Batch record?</h2>


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Batch Day:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BatchDay)
        </dd>
        <dt class = "col-sm-2">
            Batch Time:
        </dt>
        <dd class = "col-sm-10">
           @{
                var batchTime = Model.BatchTime;
                var batchTimeString = batchTime.ToString().Replace("Batch_", "").Insert(2, ":");
                @batchTimeString
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Staffs.FullName):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Staffs.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subjects.SubjectName):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subjects.SubjectName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BatchId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
